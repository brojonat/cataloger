# Server configuration
export SERVICE_NAME=cataloger
export HOST=0.0.0.0
export PORT=8000
export LOG_LEVEL=INFO
export LOG_JSON=false

# Authentication
export AUTH_SECRET=your-strong-shared-secret
export JWT_ALG=HS256

# Anthropic API
export ANTHROPIC_API_KEY=sk-ant-...

# S3 Storage
export S3_BUCKET=your-bucket-name
export S3_REGION=us-east-1
export AWS_ACCESS_KEY_ID=your-access-key
export AWS_SECRET_ACCESS_KEY=your-secret-key

# Container configuration
export CONTAINER_IMAGE=cataloger-agent:latest
export CONTAINER_POOL_SIZE=5

# Agent prompts (base64-encoded YAML)
# Generate with: base64 -i prompts/cataloging_agent.yaml
export CATALOGING_AGENT_PROMPT=<base64-encoded-yaml>
export SUMMARY_AGENT_PROMPT=<base64-encoded-yaml>
