# Server configuration
SERVICE_NAME=cataloger
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
LOG_JSON=false

# Authentication
AUTH_SECRET=your-strong-shared-secret
JWT_ALG=HS256

# LLM API (currently using Anthropic Claude)
LLM_API_KEY=sk-ant-...
MODEL_NAME=claude-sonnet-4-0

# S3 Storage
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Container configuration
CONTAINER_IMAGE=cataloger-agent:latest
CONTAINER_POOL_SIZE=5
# HOST_DATA_DIR=/path/to/data (required when server runs in Docker - absolute path to data dir on host)

# Agent prompts (base64-encoded YAML)
# Generate with: base64 -i prompts/cataloging_agent.yaml
CATALOGING_AGENT_PROMPT=<base64-encoded-yaml>
SUMMARY_AGENT_PROMPT=<base64-encoded-yaml>
